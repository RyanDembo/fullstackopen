  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch phonebook debugger",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/part3/phonebook-backend/index.js",
      "cwd": "${workspaceFolder}/part3/phonebook-backend",
      "serverReadyAction": {
        "pattern": "Server running on port ([0-9]+)",
        "uriFormat": "http://localhost:%s",
        "action": "openExternally"
      }
    }
  ]
}
